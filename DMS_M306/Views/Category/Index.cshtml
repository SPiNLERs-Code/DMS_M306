@model DMS_M306.ViewModels.Category.CategoriesViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        <b class="lead">Categories</b><span class=" pull-right btn-group">
            <a href="/Category/Create" class="btn btn-sm btn-default"><span class="glyphicon glyphicon-plus" data-toggle="tooltip" data-placement="Top" title="Add category"></span></a>
        </span>

        <div class="clearfix"></div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th width="100px"></th>
            </tr>
            @foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-xs btn-danger " href="/Category/Delete/@item.Id" data-toggle="tooltip" data-placement="Top" title="Delete category"><i class="glyphicon glyphicon-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>